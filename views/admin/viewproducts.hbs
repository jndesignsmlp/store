<section>
    <div class="container">
        <div class="row mt-3">
            <a href="/admin/addproduct" class="btn btn-success ml-auto">Add product</a>
        </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Description[kg]</th>
      <th scope="col">Offerprice</th>
      <th scope="col">Price</th>
      <th scope="col">Offer</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}kg</td>
      <td>&#x20b9; {{this.Offerprice}}</td>
      <td>&#x20b9; {{this.Price}}</td>
      <td>{{this.Offer}}</td>
      <td><img style="width: 50px; height: 50px;" src="/productimages/{{this._id}}.jpg" alt=""></td>
      <td>
        <a href="/admin/editproduct/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/deleteproduct/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are You want to Delete?{{this.Name}}')">Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>
<link rel="stylesheet" href="/assets/style.css">